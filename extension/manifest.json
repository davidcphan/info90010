{
    "name": "studyMates",
    "description": "studyMates web extension",
    "version": "0.1.0",
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": ["/js/content.js"]
        }
    ],
    "icons": {
        "16": "/img/icon.png"
    },
    "background": {
        "scripts": ["/js/background.js"],
        "persistent": false
    },
    "options_page": "options.html",
    "browser_action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs"
    ]


}